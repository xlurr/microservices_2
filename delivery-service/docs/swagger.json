                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Удалить доставку",
                "tags": [
                    "deliveries"
                ],
                "summary": "Delete delivery",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Delivery ID",
                        "name": "id",
                        "in": "path",
                        "required": true
