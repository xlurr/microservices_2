                "address",
                "order_id",
                "status"
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "maxLength": 500,
                    "minLength": 10
                },
                "courier_id": {
                    "type": "integer"
                },
                "createdAt": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "order_id": {
                    "type": "integer"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "pending",
                        "in_transit",
                        "delivered",
                        "failed"
                    ]
                },
                "updatedAt": {
                    "type": "string"
                }
            }
        }
    }
